<Window x:Class="InspectionWorkApp.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:InspectionWorkApp.Converters"
        Title="Просмотр выполненных работ" Height="600" Width="1200"
        WindowState="Maximized"
        FontSize="16">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Дата:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="dpDate" Width="150" Margin="0,0,10,0" SelectedDateChanged="DpDate_SelectedDateChanged"/>
            <TextBlock Text="Оборудование (Сектор):" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbSector" Width="200" DisplayMemberPath="SectorName" Margin="0,0,10,0"/>
            <TextBlock Text="Смена:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbShift" Width="150" Margin="0,0,10,0">
                <ComboBoxItem Content="Все" Tag="All"/>
                <ComboBoxItem Content="Дневная" Tag="Day"/>
                <ComboBoxItem Content="Ночная" Tag="Night"/>
            </ComboBox>
            <Button x:Name="btnFilter" Content="Фильтровать" Width="100" Click="BtnFilter_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnReset" Content="Сбросить" Width="100" Click="BtnReset_Click"/>
        </StackPanel>

        <!-- Сообщение об ошибке -->
        <TextBlock x:Name="txtDateError" Grid.Row="1" Foreground="Red" Margin="0,0,0,10" Visibility="Collapsed"/>

        <!-- Список работ -->
        <DataGrid x:Name="dgReports" Grid.Row="2" AutoGenerateColumns="False" Margin="0,0,0,10"
                  CanUserSortColumns="True" CanUserResizeColumns="True" SelectionMode="Single"
                  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                  IsReadOnly="True" FontSize="18">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="1">
                            <Setter Property="Background" Value="LightGreen"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="2">
                            <Setter Property="Background" Value="LightCoral"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="0">
                            <Setter Property="Background" Value="LightYellow"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Работа" Binding="{Binding WorkName}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Сектор" Binding="{Binding SectorName}" Width="150"/>
                <DataGridTextColumn Header="Смена" Binding="{Binding ShiftType}" Width="100"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusName}" Width="135"/>
                <DataGridTextColumn Header="Время выполнения" Binding="{Binding ExecutionTimeDisplay}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Оператор" Binding="{Binding OperatorName}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="3" x:Name="btnClose" Content="Закрыть" Width="100" Click="BtnClose_Click" HorizontalAlignment="Right"/>
    </Grid>
</Window>