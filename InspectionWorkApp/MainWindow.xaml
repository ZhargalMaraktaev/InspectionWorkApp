<Window x:Class="InspectionWorkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:InspectionWorkApp.Converters"
        Title="Техосмотр оборудования" Height="600" Width="1045"
        Loaded="Window_Loaded"
        FontSize="16">
    <Window.Resources>
        <converters:DateTimeConverter x:Key="DateTimeConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Статус авторизации -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Статус оператора: " FontWeight="Bold"/>
            <TextBlock x:Name="txtOperatorStatus" Text="Не авторизован" Margin="5,0,0,0" Foreground="Red"/>
        </StackPanel>

        <!-- Фильтры -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="cmbRole" Width="200" DisplayMemberPath="RoleName" Margin="0,0,10,0" IsEnabled="{Binding IsAdminRole}"/>
            <ComboBox x:Name="cmbSector" Width="200" DisplayMemberPath="SectorName" IsEnabled="{Binding IsAdminRole}"/>
        </StackPanel>

        <!-- Список задач с пагинацией -->
        <DataGrid x:Name="dgTasks" Grid.Row="2" AutoGenerateColumns="False" Margin="0,0,0,10"
                  CanUserSortColumns="True" CanUserResizeColumns="True" SelectionMode="Single"
                  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                  IsReadOnly="True" FontSize="18">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="MinHeight" Value="40"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Работа" Binding="{Binding WorkName}" Width="250">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Top"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Тип" Binding="{Binding WorkType}" Width="225">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Срок" Binding="{Binding Converter={StaticResource DateTimeConverter}}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusName}" Width="135">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StatusName}" Value="Выполнена">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusName}" Value="Отменена">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusName}" Value="Не выполнена">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Выполнена" Margin="5,0" Click="BtnMarkCompletedPerTask_Click" Tag="{Binding Id}" IsEnabled="{Binding IsUnprocessed}"/>
                                <Button Content="Отменена" Margin="5,0" Click="BtnCancelTaskPerTask_Click" Tag="{Binding Id}" IsEnabled="{Binding IsUnprocessed}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Пагинация -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="btnPrevPage" Content="Предыдущая" Width="100" Click="BtnPrevPage_Click" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtPageInfo" Text="1 из 1" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnNextPage" Content="Следующая" Width="100" Click="BtnNextPage_Click"/>
        </StackPanel>

        <!-- Админ-панель -->
        <Button Grid.Row="4" x:Name="btnOpenAdmin" Content="Открыть админ-панель" Width="200" Click="BtnOpenAdmin_Click" IsEnabled="False" Margin="0,0,0,0" HorizontalAlignment="Left"/>
    </Grid>
</Window>