<Window x:Class="InspectionWorkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:InspectionWorkApp.Converters"
        Title="Техосмотр оборудования" Height="600" Width="1200"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        FontSize="16">
    <Window.Resources>
        <converters:DateTimeConverter x:Key="DateTimeConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Статус авторизации -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Статус оператора: " FontWeight="Bold"/>
            <TextBlock x:Name="txtOperatorStatus" Text="Вставьте пропуск" Margin="5,0,0,0" Foreground="Red"/>
            <TextBlock Text="Статус БД: " FontWeight="Bold" Margin="10,0,0,0" HorizontalAlignment="Right"/>
            <TextBlock x:Name="txtDatabaseStatus" Text="Проверяется..." Margin="5,0,0,0" Foreground="Orange" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Фильтры -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="cmbRole" Width="200" DisplayMemberPath="RoleName" Margin="0,0,10,0" IsEnabled="{Binding IsAdminRole}"/>
            <ComboBox x:Name="cmbSector" Width="200" DisplayMemberPath="SectorName" IsEnabled="{Binding IsAdminRole}"/>
        </StackPanel>

        <!-- Список задач с пагинацией -->
        <DataGrid x:Name="dgTasks" Grid.Row="2" AutoGenerateColumns="False" Margin="0,0,0,10"
          CanUserSortColumns="True" CanUserResizeColumns="True" SelectionMode="Single"
          ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
          IsReadOnly="False" FontSize="18" CanUserAddRows="False">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="130"/>
                    <!-- Фиксированная высота строк -->
                    <Setter Property="VerticalAlignment" Value="Top"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>

                <DataGridTextColumn Header="Работа" Binding="{Binding WorkName}" Width="*" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="MaxHeight" Value="130"/>
                            <!-- Ограничиваем высоту текста -->
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Тип" Binding="{Binding WorkType}" Width="*" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="MaxHeight" Value="120"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Срок" Binding="{Binding Converter={StaticResource DateTimeConverter}}" Width="120" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="MaxHeight" Value="56"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusName}" Width="135" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="MaxHeight" Value="56"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StatusName}" Value="Выполнена">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusName}" Value="Не выполнена">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusName}" Value="Требуется выполнить!">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Действия" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Выполнена" Margin="5,5" Height="40" Background="Green" Foreground="White" 
                                        Click="BtnMarkCompletedPerTask_Click" Tag="{Binding Id}" IsEnabled="{Binding IsUnprocessed}"
                                        FontSize="16" VerticalContentAlignment="Center" />
                                <Rectangle Grid.Column="1" Width="2" Fill="Gray" Margin="0,5" VerticalAlignment="Stretch" />
                                <Button Grid.Column="2" Content="Не выполнена" Margin="5,5" Height="40" Background="Red" Foreground="White" 
                                        Click="BtnCancelTaskPerTask_Click" Tag="{Binding Id}" IsEnabled="{Binding IsUnprocessed}"
                                        FontSize="16" VerticalContentAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Пагинация -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="btnPrevPage" Content="Предыдущая" Width="100" Click="BtnPrevPage_Click" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtPageInfo" Text="1 из 1" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnNextPage" Content="Следующая" Width="100" Click="BtnNextPage_Click"/>
        </StackPanel>

        <!-- Админ-панель -->
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Button x:Name="btnOpenAdmin" Content="Открыть админ-панель" Width="200" Click="BtnOpenAdmin_Click" IsEnabled="False" Margin="0,0,0,0" HorizontalAlignment="Left"/>
            <Button x:Name="btnOpenReports" Content="Просмотр обработанных работ" Width="250" Click="BtnOpenReports_Click" IsEnabled="False" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>