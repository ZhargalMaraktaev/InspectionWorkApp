<Window x:Class="InspectionWorkApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminWindow" Height="800" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Статус оператора -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10,15,0,10">
            <TextBlock Text="Текущий оператор: " FontWeight="Bold"/>
            <TextBlock x:Name="txtCurrentOperator" Text="Не авторизован" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Создание работы -->
        <GroupBox Grid.Row="0" Header="Добавить новую работу" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <TextBox x:Name="txtNewWorkName" Width="200" Margin="0,0,0,5" Text="Название работы"/>
                <ComboBox x:Name="cmbFreq" Width="200" DisplayMemberPath="Frequency" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbRole" Width="200" DisplayMemberPath="RoleName" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbWorkType" Width="200" DisplayMemberPath="WorkType" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbShiftType" Width="200" Margin="0,0,0,5">
                    <ComboBoxItem Content="Дневная"/>
                    <ComboBoxItem Content="Ночная"/>
                </ComboBox>
                <Button x:Name="btnAddWork" Content="Добавить работу" Width="150" Click="BtnAddWork_Click" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Создание назначения -->
        <GroupBox Grid.Row="1" Header="Создать назначение" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <ComboBox x:Name="cmbExistingWork" Width="200" DisplayMemberPath="WorkName" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbAssignFreq" Width="200" DisplayMemberPath="Frequency" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbAssignRole" Width="200" DisplayMemberPath="RoleName" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbAssignWorkType" Width="200" DisplayMemberPath="WorkType" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbAssignShiftType" Width="200" Margin="0,0,0,5">
                    <ComboBoxItem Content="Дневная"/>
                    <ComboBoxItem Content="Ночная"/>
                </ComboBox>
                <Button x:Name="btnCreateAssignment" Content="Создать назначение" Width="150" Click="BtnCreateAssignment_Click" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Создание задачи -->
        <GroupBox Grid.Row="2" Header="Создать задачу" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <ComboBox x:Name="cmbAssignment" Width="200" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbOperator" Width="200" DisplayMemberPath="FIO" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDueDateTime" Width="200" Text="ДД.ММ.ГГГГ ЧЧ:ММ (опционально)" Margin="0,0,0,5"/>
                <Button x:Name="btnCreateTask" Content="Создать задачу" Width="150" Click="BtnCreateTask_Click" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Список работ -->
        <DataGrid x:Name="dgWorks" Grid.Row="3" AutoGenerateColumns="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Название работы" Binding="{Binding WorkName}"/>
                <DataGridTemplateColumn Header="Действия">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Click="BtnDeleteWork_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка для генерации назначений -->
        <Button Grid.Row="4" x:Name="btnGenerateAssignments" Content="Генерировать назначения" Width="150" Click="BtnGenerateAssignments_Click" Margin="0,0,0,10"/>

        <!-- Кнопка для удаления назначений -->
        <Button Grid.Row="5" x:Name="btnDeleteAssignments" Content="Удалить все назначения" Width="150" Click="BtnDeleteAssignments_Click" Margin="0,0,0,10"/>
        <Button Grid.Row="6" x:Name="btnOpenReports" Content="Просмотр отчетов" Width="150" Click="BtnOpenReports_Click" Margin="0,0,0,10"/>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="7" x:Name="btnClose" Content="Закрыть" Width="150" Click="BtnClose_Click"/>
    </Grid>
</Window>