<Window x:Class="InspectionWorkApp.FailureReasonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор причины невыполнения" Height="400" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Список причин в виде кнопок -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <WrapPanel x:Name="wrapReasons" Orientation="Vertical" MaxHeight="300">
                <!-- Кнопки будут добавлены динамически в коде -->
            </WrapPanel>
        </ScrollViewer>

        <!-- Кнопка отмены -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Отмена" Width="100" Click="BtnCancel_Click" />
        </StackPanel>
    </Grid>
</Window>